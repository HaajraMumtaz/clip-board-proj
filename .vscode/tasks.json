{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "src/*.cpp",
                "-Iinclude",
                "-o",
                "main.exe;",
                "if",
                "($?)",
                "{./main.exe}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile all .cpp in src/ with include/ headers and run"
        }
    ]
}
